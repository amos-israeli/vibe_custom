{
	"$schema": "./gen/schemas/desktop-schema.json",
	"productName": "vibe",
	"version": "3.0.5",
	"identifier": "github.com.thewh1teagle.vibe",
	"app": {
		"windows": [],
		"withGlobalTauri": true,
		"security": {
			"assetProtocol": {
				"scope": {
					"allow": [
						"**"
					],
					"deny": [],
					"requireLiteralLeadingDot": false
				},
				"enable": true
			},
			"csp": null
		}
	},
	"build": {
		"beforeDevCommand": "bun run dev",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist",
		"devUrl": "http://localhost:1420"
	},
	"bundle": {
		"active": true,
		"targets": [
			"nsis",
			"deb",
			"rpm",
			"dmg",
			"app"
		],
		"createUpdaterArtifacts": false,
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": {
			"locales": "locales"
		}
	},
	"plugins": {
		"deep-link": {
			"mobile": [],
			"desktop": {
				"schemes": [
					"vibe"
				]
			}
		}
	}
}